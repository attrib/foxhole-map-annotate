{
  "compilerOptions": {
    "checkJs": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "lib": ["ESNext", "DOM", "DOM.Iterable"],
  "exclude": ["node_modules"]
}
